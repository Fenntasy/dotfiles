#!/bin/zsh

echo "------------------------------------------- BREW -------------------------------------------\n"
brew update
brew upgrade
brew cleanup

echo "------------------------------------------- ASDF -------------------------------------------\n"
asdf update
asdf plugin-update --all

echo "------------------------------------------ PREZTO ------------------------------------------\n"
source ~/.zprezto/init.zsh
zprezto-update

echo "---------------------------------------- APP STORE -----------------------------------------\n"
mas outdated

echo "------------------------------------------- TLDR -------------------------------------------\n"
tldr --update
